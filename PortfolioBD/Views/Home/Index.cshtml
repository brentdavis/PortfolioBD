                                                            for (var i = word.length - 1; i >= 0; i--) {
                                                                palindrome += word[i];
                                                            }
                                                            // $("#ex4out").text(palindrome);
                                                            //check if it is a palindrome by comparing strings!
                                                            if (word == palindrome) {
                                                                $("#ex4out").text(word + " is a palindrome!");
                                                            } else {
                                                                $("#ex4out").text(word + " is a not palindrome.");
                                                            }
                                                        })
