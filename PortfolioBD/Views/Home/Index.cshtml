                                                                document.getElementById("ex3out").innerHTML = "Please enter a number between 1 and 100.";
                                                                document.getElementById("ex3out").style.display = "block";
                                                            }
                                                            else if (isNaN(num2) || num2 < 1 || num2 > 100 || num2 == "") {
